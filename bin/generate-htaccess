#!/usr/bin/env php
<?php

/**
 * Command Line .htaccess Generator Script - Composer Version
 *
 * Usage:
 *   vendor/bin/generate-htaccess [config-file] [output-file]
 *   composer run generate [config-file] [output-file]
 *
 * Examples:
 *   vendor/bin/generate-htaccess examples/config.php .htaccess
 *   composer run generate examples/simple-config.php .htaccess
 */

declare(strict_types=1);

// Auto-detect if running via Composer or standalone
if (file_exists(__DIR__ . '/../vendor/autoload.php')) {
	// Running from vendor/bin (installed via Composer)
	require_once __DIR__ . '/../vendor/autoload.php';
} elseif (file_exists(__DIR__ . '/../../../autoload.php')) {
	// Running as a dependency in another project
	require_once __DIR__ . '/../../../autoload.php';
} else {
	// Fallback for standalone usage
	require_once __DIR__ . '/../src/HtaccessGenerator.php';
}

use YoBuild\Generators\HtaccessGenerator;

/**
 * Display usage information
 */
